    @model CITIwebApp.Models.Vehiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Vehiculo</h4>
    <hr />
    <div class="row">
        <div class="col-sm-4">
             @if(Model.Foto!=null)
            {
                <img src="~/fotos/@Model.Foto"class="img-thumbnail" width="150px"/>
            }
        </div>
        <div class="col-sm-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Modelo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Modelo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Matricula)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Matricula)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Foto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Especialidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Especialidad)
                </dd>
            </dl>
        </div>
    </div>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Volver    </a>
</div>
